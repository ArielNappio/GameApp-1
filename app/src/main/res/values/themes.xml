<resources>
    <!-- Base application theme. -->
    <style name="Theme.GameApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Filter.Button" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textSize">35sp</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="Searchbar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:inputType">text</item>
        <item name="hintEnabled">true</item>
        <item name="queryHint">@string/search_hint</item>
        <item name="defaultQueryHint">@string/search_hint</item>
        <item name="iconifiedByDefault">false</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="android:background">@color/light_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="Activity.Background" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="Fragment.Background" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/dark_blue</item>
    </style>

    <style name="HomeFragment.GameOfTheDay.Background" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="Fragment.TextTitle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Fragment.GameOfTheDay.Title" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Activity.NavigationBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/light_blue</item>
    </style>

    <style name="RecyclerItem.Details1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:autoSizeTextType">none</item>
        <item name="autoSizeMinTextSize">5dp</item>
        <item name="autoSizeMaxTextSize">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="RecyclerItem.Details2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:autoSizeTextType">none</item>
        <item name="autoSizeMinTextSize">5dp</item>
        <item name="autoSizeMaxTextSize">10dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="RecyclerItem.Details3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:autoSizeTextType">none</item>
        <item name="autoSizeMinTextSize">5dp</item>
        <item name="autoSizeMaxTextSize">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>


    

</resources>