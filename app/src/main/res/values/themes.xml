<resources>
    <!-- Base application theme. -->
    <style name="Theme.GameApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Filter.Button" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textSize">35sp</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="Searchbar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textSize">20sp</item>
        <item name="hintEnabled">true</item>
        <item name="queryHint">@string/search_hint</item>
        <item name="defaultQueryHint">@string/search_hint</item>
        <item name="iconifiedByDefault">false</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/darker_blue</item>
        <item name="android:textColorHint"> #757575 </item>
    </style>

    <style name="Activity.Background" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/darker_blue</item>
    </style>

    <style name="Fragment.Background" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/midnight_blue</item>
    </style>
</resources>