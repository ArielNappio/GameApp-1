<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.practice.gameapp.ui.fragments.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.practice.gameapp.ui.fragments.quiz.QuizMenuFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_quiz_menu" >
        <action
            android:id="@+id/action_navigation_dashboard_to_quizGameFragment3"
            app:destination="@id/quizGameFragment3" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.practice.gameapp.ui.fragments.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/quizGameFragment3"
        android:name="com.practice.gameapp.ui.fragments.quiz.QuizGameFragment"
        android:label="QuizGameFragment" />
</navigation>